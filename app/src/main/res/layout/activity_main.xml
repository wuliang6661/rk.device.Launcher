<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/front_bg">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_signal"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_signal" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/init_error"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/wanring" />


        <ImageView
            android:id="@+id/battry_plug"
            android:layout_width="33dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/plug"
            android:visibility="gone" />


        <TextView
            android:id="@+id/battry_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="97%"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <rk.device.launcher.widget.BatteryView
            android:id="@+id/battry_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp" />


        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:scaleType="centerInside"
            android:src="@drawable/icon_setting" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/ll_header"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/camera_surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <rk.device.launcher.widget.BackCameraSurfaceView
                android:id="@+id/camera_surfaceview1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="visible" />

            <rk.device.launcher.widget.DetectedFaceView
                android:id="@+id/face_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_declare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/declare_bg"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingBottom="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="21dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:visibility="gone"
                tools:text="@string/declare" />
        </FrameLayout>

    </LinearLayout>

    <include
        android:id="@+id/rl_bottom"
        layout="@layout/layout_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_75"
        android:src="@drawable/arrow_up"
        android:visibility="visible" />

</RelativeLayout>
