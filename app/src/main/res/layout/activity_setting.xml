<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/topbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_normal_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_set_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_set_time"
                    style="@style/iv_setting_item"
                    android:src="@drawable/basic_setting_normal" />

                <TextView
                    android:id="@+id/tv_set_time"
                    style="@style/tv_setting_item"
                    android:text="@string/basic_setting" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dphalf"
                android:layout_height="match_parent"
                android:background="@color/blue_31598a" />

            <LinearLayout
                android:id="@+id/ll_set_net"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_set_network"
                    style="@style/iv_setting_item"
                    android:src="@drawable/set_network_normal" />

                <TextView
                    android:id="@+id/tv_set_network"
                    style="@style/tv_setting_item"
                    android:text="@string/net_setting" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dphalf"
            android:background="@color/blue_31598a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_set_door"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_set_door"
                    style="@style/iv_setting_item"
                    android:src="@drawable/set_door_normal" />

                <TextView
                    android:id="@+id/tv_set_door"
                    style="@style/tv_setting_item"
                    android:text="@string/setting_menjin" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dphalf"
                android:layout_height="match_parent"
                android:background="@color/blue_31598a" />


            <LinearLayout
                android:id="@+id/ll_set_sys"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_set_system"
                    style="@style/iv_setting_item"
                    android:src="@drawable/set_system_normal" />

                <TextView
                    android:id="@+id/tv_set_sys"
                    style="@style/tv_setting_item"
                    android:text="@string/sys_setting" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dphalf"
            android:background="@color/blue_31598a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_manage_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_manage_user"
                    style="@style/iv_setting_item"
                    android:src="@drawable/manage_user_normal" />

                <TextView
                    android:id="@+id/tv_manage_user"
                    style="@style/tv_setting_item"
                    android:text="@string/person_manger" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dphalf"
                android:layout_height="match_parent"
                android:background="@color/blue_31598a" />


            <LinearLayout
                android:id="@+id/ll_manage_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_manage_data"
                    style="@style/iv_setting_item"
                    android:src="@drawable/manage_data_normal" />

                <TextView
                    android:id="@+id/tv_manage_data"
                    style="@style/tv_setting_item"
                    android:text="@string/data_manager" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dphalf"
            android:background="@color/blue_31598a" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sys_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_sys_info"
                    style="@style/iv_setting_item"
                    android:src="@drawable/system_info_normal" />

                <TextView
                    android:id="@+id/tv_sys_info"
                    style="@style/tv_setting_item"
                    android:text="@string/sys_info" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dphalf"
                android:layout_height="match_parent"
                android:background="@color/blue_31598a" />


            <LinearLayout
                android:id="@+id/ll_recovery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_recovery"
                    style="@style/iv_setting_item"
                    android:src="@drawable/recovery_normal" />

                <TextView
                    android:id="@+id/tv_recovery"
                    style="@style/tv_setting_item"
                    android:text="@string/huifu_chuchang" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
